# Archivo de configuración de ejemplo para los scripts de Go Together
# Copia este archivo a config.env y modifica los valores según tus necesidades

# Configuración de red
SUI_NETWORK=testnet
# Opciones: testnet, devnet, mainnet

# Configuración de gas
DEFAULT_GAS_BUDGET=100000000
DRIVER_GAS_BUDGET=10000000
PASSENGER_GAS_BUDGET=10000000
TRIP_GAS_BUDGET=10000000

# Configuración de ejemplo para conductores
DRIVER_1_NAME="Juan Pérez"
DRIVER_1_CAR="Toyota Corolla 2020"

DRIVER_2_NAME="Ana López"
DRIVER_2_CAR="Honda Civic 2019"

DRIVER_3_NAME="Carlos Ruiz"
DRIVER_3_CAR="Nissan Sentra 2021"

# Configuración de ejemplo para pasajeros
PASSENGER_1_NAME="María García"
PASSENGER_2_NAME="Pedro Martínez"
PASSENGER_3_NAME="Laura Sánchez"

# Configuración de ejemplo para viajes
TRIP_1_ORIGIN="Centro de la ciudad"
TRIP_1_DESTINATION="Aeropuerto"

TRIP_2_ORIGIN="Universidad"
TRIP_2_DESTINATION="Centro comercial"

TRIP_3_ORIGIN="Estación de tren"
TRIP_3_DESTINATION="Hospital"

# Configuración de colores para output
ENABLE_COLORS=true

# Configuración de limpieza
AUTO_CLEANUP=false
KEEP_JSON_FILES=true

# Configuración de logging
LOG_LEVEL=INFO
# Opciones: DEBUG, INFO, WARNING, ERROR

# Configuración de timeouts
TRANSACTION_TIMEOUT=30
VERIFICATION_TIMEOUT=10
